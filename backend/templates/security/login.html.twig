{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="position-logo">
		<img class="pt-2 pt-md-5 logo" src="/logo_jo.png" alt="logo">
    </div>
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{# {% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que 
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %} #}

		<h2 class="text-center pt-2 pb-2 pt-md-3 pb-md-3">Connexion:</h2>
		{# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
        <div class="position-form">
		<label class="d-flex w-50 input-size" for="inputEmail">Email :</label>
        
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="m-2 form-control input-bgc-and-border rounded-pill px-3 py-2 w-50 input-size" autocomplete="email" required autofocus>
		</div>
        <div class="position-form">
        <label for="inputPassword" class="d-flex w-50 input-size">Mot de passe :</label>
        
		<input type="password" name="password" id="inputPassword" class="m-2 form-control input-bgc-and-border rounded-pill px-3 py-2 w-50 input-size" autocomplete="current-password" required>
        </div>
		<a href="" class="d-flex justify-content-center pt-3 text-center">Vous n'avez pas de compte ? Inscrivez-vous!</a>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

<div class="mt-3 position-form">
		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" name="_remember_me">
				Se souvenir de moi
			</label>
		</div>
        </div>
<div class="position-form">
		<div classname="d-flex w-50 input-size justify-content-end">
			<button type="submit" class="mb-5 btn btn-warning connexion-btn mt-4 py-2 rounded-pill text-white fw-semibold">Connexion</button>
		</div>
        </div>
	</form>
{% endblock %}
