{% extends 'base.html.twig' %}

{% block title %}JOArticle
{% endblock %}

{% block body %}
	<h1>Détail de l'article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ j_o_article.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ j_o_article.title }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ j_o_article.image }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ j_o_article.description }}</td>
			</tr>
			<tr>
				<th>Date_article</th>
				<td>{{ j_o_article.dateArticle ? j_o_article.dateArticle|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Like_article</th>
				<td>{{ j_o_article.likeArticle }}</td>
			</tr>
		</tbody>
	</table>

	<div class="show">
		<a href="{{ path('app_j_o_article_edit', {'id': j_o_article.id}) }}" class="btn btn-secondary">Éditer</a>
		{{ include('jo_article/_delete_form.html.twig') }}
	</div>

    	<a href="{{ path('app_j_o_article_index') }}" class="btn btn-primary">Retour à la liste</a>

{% endblock %}
