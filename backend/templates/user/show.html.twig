{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ user.name }}</td>
			</tr>
			<tr>
				<th>First_name</th>
				<td>{{ user.firstName }}</td>
			</tr>
		</tbody>
	</table>

	<div class="show">
		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">Éditer</a>
		{{ include('user/_delete_form.html.twig') }}
	</show>

	<a href="{{ path('app_user_index') }}" class="btn btn-primary">Retour à la liste</a>

{% endblock %}
